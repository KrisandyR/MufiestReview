<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mufiest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_grey</item>
        <item name="colorPrimaryVariant">@color/blue_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/light_blue_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/dark_blue_grey</item>
        <item name="textAppearanceHeadline6">@style/AppLabelStyle</item>
    </style>


    <style name="AppLabelStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <!-- Customize text appearance attributes to style the label -->
        <item name="android:textColor">@color/orange</item>
        <!-- Add other text attributes as needed -->
    </style>

    <style name="RegularTextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Mufiest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_grey</item>
        <item name="colorPrimaryVariant">@color/blue_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/light_blue_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/dark_blue_grey</item>
        <item name="textAppearanceHeadline6">@style/AppLabelStyle</item>
    </style>

    <style name="Theme.Mufiest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mufiest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>