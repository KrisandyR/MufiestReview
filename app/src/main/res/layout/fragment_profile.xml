<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.ProfileFragment">

    <!-- Image Profile -->
    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_picture"
        android:background="@drawable/square_profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"/>

    <!-- Change Image Button -->
    <ImageView
        android:id="@+id/ciButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/imageProfile"
        android:layout_alignBottom="@id/imageProfile"
        android:layout_marginRight="-15dp"
        android:layout_marginBottom="-4dp"
        android:background="@drawable/circular_background"
        android:scaleType="fitCenter"
        android:src="@drawable/upload_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ciButton"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_centerInParent="true">

        <!-- User Information - Username -->
        <RelativeLayout
            android:id="@+id/usernameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Username:"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/textUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelUsername"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Example"/>
        </RelativeLayout>

        <!-- User Information - Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameBox"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Email:"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelEmail"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="example@domain.com"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
